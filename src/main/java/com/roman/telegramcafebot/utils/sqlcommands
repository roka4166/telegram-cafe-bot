create table admin_password(
    id int generated by default as IDENTITY primary key,
    password varchar(50) not null
);

insert into admin_password (password) values ('password123');

create table button(
    id int generated by default as identity primary key,
    name varchar(50) not null,
    belongs_to_menu varchar(50) not null,
    callbackdata varchar(50) not null
);

insert into button (name, belongs_to_menu, callbackdata) VALUES ('', '', '');

create table coworker_info(
    id int generated by default as identity primary key,
    chat_id int not null,
    is_active boolean not null
);

create table order_info(
    id int generated by default as identity primary key,
    chat_id int not null,
    total_price int not null,
    items varchar(500) not null
);